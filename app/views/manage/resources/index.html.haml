%h1
  空间
  = @bucket.name

%table
  %thead
    %tr
      %th 文件名
      %th 下载链接
      %th
      %th
      %th

  %tbody
    - @resources.each do |resource|
      %tr
        %td= resource.path
        %td= link_to resource.link, resource.link
        %td= link_to '查看', manage_bucket_resource_path(@bucket, resource)
        %td= link_to '编辑', edit_manage_bucket_resource_path(@bucket, resource)
        %td= link_to '删除', manage_bucket_resource_path(@bucket, resource), method: :delete, data: { confirm: '确定删除嘛？' }

%br

= link_to '上传文件', new_manage_bucket_resource_path(@bucket)
\|
= link_to '返回', manage_bucket_path(@bucket)
